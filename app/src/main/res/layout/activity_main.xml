<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:scrollHorizontally="true"
        android:textSize="40px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="40px"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:backgroundTint="@android:color/black"
            android:onClick="setOperacao">

        </Button>
        <Button
            android:id="@+id/botao7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7"
            android:textColor="#FF0000"
            android:backgroundTint="@android:color/black"
            android:textSize="40px"
            android:textStyle="bold"
            android:onClick="adicionarNumero"/>
        <Button
            android:id="@+id/botao8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="40px"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:backgroundTint="@android:color/black"
            android:onClick="adicionarNumero"
            />
        <Button
            android:id="@+id/botao9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="40px"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:backgroundTint="@android:color/black"
            android:onClick="adicionarNumero">

        </Button>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >
        <Button
            android:id="@+id/mult"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="*"
            android:textSize="40px"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:backgroundTint="@android:color/black"
            android:onClick="setOperacao">

        </Button>
        <Button
            android:id="@+id/botao4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4"
            android:textColor="#FF0000"
            android:backgroundTint="@android:color/black"
            android:textSize="40px"
            android:textStyle="bold"
            android:onClick="adicionarNumero"/>
        <Button
            android:id="@+id/botao5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="40px"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:backgroundTint="@android:color/black"
            android:onClick="adicionarNumero"
            />
        <Button
            android:id="@+id/botao6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="40px"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:backgroundTint="@android:color/black"
            android:onClick="adicionarNumero">

        </Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/soma"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="+"
            android:textSize="40px"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:backgroundTint="@android:color/black"
            android:onClick="setOperacao"/>
        <Button
            android:id="@+id/botao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="40px"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:backgroundTint="@android:color/black"
            android:onClick="adicionarNumero"/>
        <Button
            android:id="@+id/botao2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="40px"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:backgroundTint="@android:color/black"
            android:onClick="adicionarNumero"/>
        <Button
            android:id="@+id/botao3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="40px"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:backgroundTint="@android:color/black"
            android:onClick="adicionarNumero"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/subtracao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="40px"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:backgroundTint="@android:color/black"
            android:onClick="setOperacao"
            />
        <Button
            android:id="@+id/limpar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="C"
            android:textSize="40px"
            android:backgroundTint="@android:color/black"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:onClick="limpar"></Button>
        <Button
            android:id="@+id/igual"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="="
            android:textStyle="bold"
            android:textSize="40px"
            android:textColor="#FF0000"
            android:backgroundTint="#000000"
            android:onClick="calcular"></Button>
        <Button
            android:id="@+id/botao0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40px"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:backgroundTint="@android:color/black"
            android:onClick="adicionarNumero"/>

    </LinearLayout>
</LinearLayout>
